<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">


    <style>
      @media (min-width: 320px) {
        .side-padder {
          padding: 0;
        }
        .header-font {
          font-size: 30px;
          margin: 0;
          font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        }
        .email-container {
          width: 80%;
          margin-left: 10%;
          margin-right: 10%;
        }
        .text-header {
          font-size: 40px;
          color: #39393A;
          font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        }
        .text-font {
          font-size: 34px;
          color: #39393A;
          font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        }
        .text-not-request{
          text-align: center;
          font-size: 28px;
          color: #39393A;
          font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
          margin-bottom: 150px;
        }
        .footer-frame {
          background-color: #FF6555;
          height: 104px;
        }
        .footer-text {
          padding: 32px 0 32px 64px;
          text-align: center;
        }
        .text {
          font-size: 24px;
          color: #FFFFFF;
          font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
        }
        .divider {
          border-top: solid 1px #dcdcdc;
          margin: 32px 0;
        }
        .outer-table {
          margin-top: 16px;
          background-color: #FFFFFF;
          border: solid 1px #D9D9D9;
        }
        .inner-table {
          border-top: solid 4px #FF6555;
          float: left;
        }
        .button-container {
          margin-top: 50px;
        }
        .button {
          width: 450px;
          height: 80px;
          border: none;
          border-radius: 20px;
          font-size: 34px;
          box-shadow: 0 2px 4px 0 rgba(0,0,0,0.24), 0 8px 8px 0 rgba(0,0,0,0.08);
          font-weight: 400;
          font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
          border-radius: 2px;
          background-color: #FF6555;
          cursor: pointer;
          color: white;
        }
        .button:hover {
          background-color: #fc7c6f;
          transition: 0.3s;
        }
        .button-text {
          color: #FFFFFF;
        }
        .display-grid {
          display: grid;
          justify-content: space-evenly;
        }
        .image-frame {
          margin: 32px 0;
          width: 280px;
        }
      }
      @media (min-width: 992px) {
        .header-font {
          font-size: 30px;
        }
        .email-container {
          margin-top: -100px;
        }
        .text-header {
          font-size: 25px;
        }
        .text-font {
          font-size: 20px;
        }
        .text-not-request{
          font-size: 18px;
        }
        .text {
          font-size: 14px;
        }
        .button {
          width: 380px;
          height: 64px;
          font-size: 20px;
        }
        .image-frame {
          width: 150px;
        }
      }
    </style>

  </head>

  <body>
    <table cellpadding="0" cellspacing="0" align="center" class="outer-table">
      <tr>
        <td>
          <table cellpadding="0" cellspacing="0" bgcolor="#ffffff" width="100%" height="700px" class="inner-table">

            <tr>
              <td class="display-grid">
                # <%= image_tag('logo.png', class: 'image-frame') %>
              </td>
            </tr>
            <tr>
              <td valign="top" class="side-padder">
                <div class="side-padder">

                <%= yield %>

                </div>
              </td>
            </tr>
          </table>
        </td>
      </tr>
      <tr class="footer-frame">
        <td valign="top" align="center">
          <div class="footer-text">
            <p class="text">
              <%= t('devise.mailers.automatic_message') %>
            </p>
            <p class="text">
              <%= t('devise.mailers.copyright_message') %>
            </p>
          </div>
        </td>
      </tr>
    </table>
  </body>
</html>
